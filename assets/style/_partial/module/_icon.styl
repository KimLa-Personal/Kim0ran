/*----------------------------------------------------------
 Icon
------------------------------------------------------------*/

.icon
  display: inline-block;
  width: 40px;
  height: 40px;
  background: url($pathImage + "icon_social.png") no-repeat;
  background-size: auto 40px;
  text-indent: -9999px;

.icon-twitter
  @extend .icon
  background-position: 0 0

.icon-facebook
  @extend .icon
  background-position: -50px 0

.icon-line
  @extend .icon
  background-position: -100px 0

.icon-instagram
  @extend .icon
  background-position: -150px 0

.icon-github
  @extend .icon
  background-position: -200px 0
